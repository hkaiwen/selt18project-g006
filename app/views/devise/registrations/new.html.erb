<div class="topnav", id="nav_bar">
  <ul>
    <li id="title">Word Power</li>
  </ul>
</div>
<div  class="container", id="sign_up_form">
<h2 id="sign_up_title">Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
  <div class="field">
    <%= f.label :first_name %><br />
    <%= f.text_field :first_name, autofocus: true, id: "sign_up_text1" %>
  </div>

  <div class="field">
    <%= f.label :last_name %><br />
    <%= f.text_field :last_name, autofocus: true, id: "sign_up_text2"%>
  </div>

  <div class="field">
    <%= f.label :email %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", id: "sign_up_text3" %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", id: "sign_up_text4" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", id: "sign_up_text5" %>
  </div>

  <div class="actions" >
    <%= f.submit "Sign up", id: "submit_sign_up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
