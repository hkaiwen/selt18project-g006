<div  class="container", id="add_form">
  <h1 id="add_title"><b>Add a new question</b></h1>
  <%= form_tag questions_path, method: :post do %>
    <%= label :question, :question,'Question' %>
    <br>
    <%= text_area :question, 'question' %>
    <br>
    <%= label :question, :answer, 'Answer' %>
    <br>
    <%= text_area :question, 'answer' %>
    <br>
    <%= label :question, :option2, 'Option 2' %>
    <br>
    <%= text_area :question, 'option2' %>
    <br>
    <%= label :question, :option3, 'Option 3' %>
    <br>
    <%= text_area :question, 'option3' %>
    <br>
    <%= label :question, :option4, 'Option 4' %>
    <br>
    <%= text_area :question, 'option4' %>
    <br>
    <%= label :question, :explanation, 'Explanation for question' %>
    <br>
    <%= text_area :question, 'explanation' %>
    <br>
    <%= label :question, :level, 'Level of question' %>
    <br>
    <%= select_tag "question[level]", "<option value='Easy'>Easy</option><option value='Medium'>Medium</option><option value='Hard'>Hard</option>", prompt: 'Select Level', class: "btn btn-outline-secondary btn-md"%>
    <br>
    <br>
    <%= submit_tag 'Add this question', class: "btn btn-outline-secondary btn-md" %>
  <%end %>
</div>
