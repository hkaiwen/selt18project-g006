<h1>Leaderboard</h1>
<div class="container">
  <table class="table table-secondary">
    <thead>
    <tr>
      <th scope="col">#Rank</th>
      <th scope="col">Name</th>
      <th scope="col">Score</th>
    </tr>
    </thead>
    <tbody>
    <% @top_score.each_with_index do |score,index| %>
      <tr>
        <td><%= index+1%></td>
        <td><%=score[0] %></td>
        <td><%= score[1] %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>

